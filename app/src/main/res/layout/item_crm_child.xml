<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <com.netease.nim.common.ui.imageview.HeadImageView
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:id="@+id/head_img"
        style="@style/head_style"
        android:src="@drawable/ic_patient_head"
        />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/menu_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/head_img"
        android:text="患者1"
        android:textColor="@color/text_body_strong"
        android:textSize="@dimen/team_item_text"/>

    <View
        style="@style/style_bottom_line"
        android:layout_alignLeft="@id/menu_title_tv"/>


</RelativeLayout>

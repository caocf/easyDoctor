<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

    <com.netease.nim.common.ui.imageview.HeadImageView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/doctors_default_head"
        android:id="@+id/recent_head_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:maxWidth="240dp"
        android:textSize="@dimen/text_16"
        android:layout_marginTop="20dp"
        android:id="@+id/recent_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/recent_head_img"
        android:singleLine="true"
        android:textColor="@color/text_body_strong"
        tools:text="韩国最美整形医院  李医生"/>

    <TextView
        android:layout_alignLeft="@id/recent_name_tv"
        android:maxWidth="150dp"
        android:id="@+id/recent_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recent_name_tv"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:textSize="@dimen/text_13"
        android:textColor="@color/text_body_weak"
        tools:text="Good nightGood nightGood nightGood nightGood nightGood nightGood nightGood nightGood nightGood night"/>

    <TextView
        android:layout_alignBottom="@id/recent_name_tv"
        android:layout_marginRight="16dp"
        android:id="@+id/recent_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_10"
        android:textColor="@color/text_body_weak"
        tools:text="12:90"/>

    <TextView
        android:textSize="@dimen/text_10"
        android:id="@+id/recent_unread_tv"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/recent_time_tv"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="6dp"
        android:background="@drawable/shape_dot_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/recent_time_tv"
        android:layout_marginRight="24dp"
        android:background="@drawable/shape_dot_red"
        android:id="@+id/recent_system_dot_tv"
        android:layout_width="7dp"
        android:layout_height="7dp"/>

</RelativeLayout>
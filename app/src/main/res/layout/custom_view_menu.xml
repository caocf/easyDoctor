<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_head_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rea_height"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/dm_icon_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/margin_left_right"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_back"
        />

    <TextView
        android:id="@+id/dm_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:layout_toRightOf="@+id/dm_icon_img"
        android:text="@string/app_name"
        android:textColor="@color/text_body_strong"
        android:textSize="@dimen/text_16"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        />

    <View
        android:id="@+id/dm_line_v"
        style="@style/style_bottom_line"
        android:layout_alignLeft="@id/dm_title_tv"
        />
</RelativeLayout>

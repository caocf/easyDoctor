<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.easyhoms.easydoctor.team.activity.doctor.ChatSettingActivity">

    <com.easyhoms.easydoctor.common.view.MyActionbar
        android:id="@+id/chat_set_ma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ma_style="white"
        app:ma_title="@string/chat_setting"/>

    <View
        android:id="@+id/line"
        style="@style/style_line"
        android:layout_below="@id/chat_set_ma"/>

    <LinearLayout
        android:id="@+id/info_ll"
        android:background="@color/white"
        android:layout_below="@id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.netease.nim.common.ui.imageview.HeadImageView
            android:id="@+id/user_head_hiv"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginTop="15dp"
            android:src="@drawable/user_head_default"/>

        <TextView
            android:id="@+id/real_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="奥黛丽"
            android:textColor="@color/text_body_strong"
            android:textSize="@dimen/text_24"/>

        <TextView
            android:id="@+id/nick_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/real_name_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="昵称奥黛丽"
            android:textColor="@color/text_body_weak"
            android:textSize="@dimen/text_18"/>

        <TextView
            android:id="@+id/age_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="10dp"
            android:text="12"
            android:textColor="@color/text_body_weak"
            android:textSize="@dimen/text_16"/>

        <View
            style="@style/style_line"/>
    </LinearLayout>
    <View
        android:layout_below="@+id/info_ll"
        android:id="@+id/line1"
        style="@style/style_line"
        android:layout_marginTop="20dp"/>
    <View
        style="@style/style_line"
        android:layout_below="@+id/check_rl"/>

    <RelativeLayout
        android:id="@+id/check_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line1"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="@string/store_user"
            android:textSize="@dimen/text_18"/>

        <ImageView
            android:id="@+id/user_store_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/selector_checkbox"/>
    </RelativeLayout>

    <View
        style="@style/style_line"
        android:layout_above="@+id/transfor_rl"/>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/transfor_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/transfor_tv"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:drawableRight="@drawable/icon_transfor_send"
            android:gravity="bottom"
            android:text="@string/transfer_member"
            android:textColor="@color/main_color_blue"
            android:textSize="@dimen/text_18"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/transfor_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/transfer_member_describe"
            android:textColor="@color/text_body_weak"
            android:textSize="@dimen/text_14"/>


    </RelativeLayout>

</RelativeLayout>

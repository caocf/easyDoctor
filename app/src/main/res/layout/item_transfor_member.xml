<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/treat_item_letter_tv"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@color/shadow"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="H"
        android:textColor="@color/tab_title_color"
        android:textSize="@dimen/text_12"/>

    <com.netease.nim.common.ui.imageview.HeadImageView
        android:layout_below="@+id/treat_item_letter_tv"
        android:id="@+id/head_hiv"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        style="@style/head_style"
        android:layout_alignParentLeft="true"
        android:src="@drawable/doctors_default_head"/>

    <TextView
        android:text="HHH"
        android:layout_below="@id/treat_item_letter_tv"
        android:id="@+id/member_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/head_hiv"
        android:textColor="@color/text_body_strong"
        android:textSize="@dimen/team_item_text"/>


</RelativeLayout>
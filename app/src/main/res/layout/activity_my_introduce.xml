<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_introduce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.easyhoms.easydoctor.my.activity.personal.MyIntroduceActivity">
    <com.easyhoms.easydoctor.common.view.MyActionbar
        android:id="@+id/my_introduce_ma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ma_title="@string/my_introduce">
    </com.easyhoms.easydoctor.common.view.MyActionbar>
    <View
        android:layout_marginTop="17dp"
       style="@style/style_line"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:background="@color/white">
        <EditText
            android:id="@+id/my_introduce_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:maxLength="100"
            android:textSize="17sp"
            android:gravity="start"
            android:background="@color/trans"
            android:textColor="@color/text_body_strong"/>
        <TextView
            android:id="@+id/my_introduce_num"
            android:layout_gravity="end|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:textSize="14sp"
            android:textColor="@color/text_body_weak"
            android:text="@string/hundred"/>
    </FrameLayout>
    <View
        style="@style/style_line"/>
</LinearLayout>

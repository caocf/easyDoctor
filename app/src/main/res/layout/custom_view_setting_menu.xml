<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_rl"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    >

    <View
        android:id="@+id/top_line_v"
        style="@style/style_line"/>

    <View
        android:id="@+id/bottom_line_v"
        style="@style/style_line"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="@dimen/height_16"
            android:id="@+id/describe_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_lock"
            />
        <TextView
            android:id="@+id/menu_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/height_16"
            android:gravity="center_vertical"
            android:text="@string/change_user_message"
            android:textColor="@color/text_body_strong"
            android:textSize="@dimen/text_16"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/height_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/describe_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/change_user_message"
            android:textColor="@color/text_body_weak"
            android:textSize="@dimen/text_16"/>

        <ImageView
            android:id="@+id/next_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_next"
            />
    </LinearLayout>
</RelativeLayout>

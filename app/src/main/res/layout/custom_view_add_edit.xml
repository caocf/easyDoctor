<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:gravity="center_vertical"
              android:background="@drawable/shape_rec_border_grey"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/reduce_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="center"
        android:src="@drawable/icon_edit_reduce"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/line_color"/>

    <EditText
        android:id="@+id/reduce_et"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:background="@color/trans"
       android:gravity="center"
        android:text="0"
        android:inputType="number"
        android:textColor="@color/main_color_blue"
        android:textSize="@dimen/text_14"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/line_color"/>

    <ImageView
        android:id="@+id/add_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="center"
        android:src="@drawable/icon_edit_add"
        />


</LinearLayout>